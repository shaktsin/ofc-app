<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ofcampus="http://schemas.android.com/apk/res/com.ofcampus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/joblist_bg_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/tool_bar"
        layout="@layout/actiontool_bar" >
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="6" >

                <com.ofcampus.ui.CustomTextView
                    android:id="@+id/fragm_createcircle_txtmodarator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/fragm_createcircle_edt_verifyCode"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/checkbox_selection"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/createcircle_txtmodarator"
                    android:textColor="@color/theme_color"
                    android:textSize="18sp"
                    android:visibility="gone"
                    ofcampus:fontName="Helvetica.otf" />

                <com.ofcampus.ui.CustomEditText
                    android:id="@+id/fragm_createcircle_edt_verifyCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/joblist_row_rect"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_circlename"
                    android:inputType="text"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/theme_color"
                    ofcampus:fontName="Helvetica.otf" >

                    <requestFocus />
                </com.ofcampus.ui.CustomEditText>

                <com.ofcampus.ui.CustomEditText
                    android:id="@+id/txt_createCircle_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/fragm_createcircle_edt_verifyCode"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/joblist_row_rect"
                    android:ems="10"
                    android:gravity="top|left"
                    android:hint="@string/enter_circledesc_limit"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:maxLength="200"
                    android:padding="12dp"
                    android:scrollHorizontally="false"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/theme_color"
                    ofcampus:fontName="Helvetica.otf" />

                <TextView
                    android:id="@+id/txtview_char_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txt_createCircle_desc"
                    android:layout_marginRight="2dp"
                    android:text="200"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.ofcampus.ui.CustomTextView
                    android:id="@+id/fragm_createcircle_btn_submit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/txt_createCircle_desc"
                    android:layout_marginTop="26dp"
                    android:background="@drawable/button_rec"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/create_circlebtn"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    ofcampus:fontName="Helvetica.otf" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>