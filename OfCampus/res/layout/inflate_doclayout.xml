<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:ofcampus="http://schemas.android.com/apk/res/com.ofcampus"
    android:id="@+id/joblistview_img_post_rel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    card_view:cardBackgroundColor="#d2e8ff"
    card_view:cardCornerRadius="3dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp" >

        <ImageView
            android:id="@+id/doc_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/doc" />

        <com.ofcampus.ui.CustomTextView
            android:id="@+id/doc_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/doc_downloadIcon"
            android:layout_toRightOf="@+id/doc_icon"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="android.DOC"
            android:textColor="@color/job_contain"
            android:textSize="@dimen/joblitview_contain"
            android:textStyle="normal"
            ofcampus:fontName="Helvetica.otf" />

        <ImageView
            android:id="@+id/doc_downloadIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/docload_g" />
    </RelativeLayout>

</android.support.v7.widget.CardView>