<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircularCounter="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/abc_popup_background_mtrl_mult"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingTop="12dp"
            android:textStyle="bold"
            android:text="Fatching attachment"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_attachementName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:padding="8dp"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp" />

        <com.ofcampus.component.ProgressBarDeterminate
            android:id="@+id/progressDeterminate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:layout_marginTop="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="#1E88E5" />

        <TextView
            android:id="@+id/txt_parsentage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical|left"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>