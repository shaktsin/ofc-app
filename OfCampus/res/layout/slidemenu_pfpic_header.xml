<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:weightSum="1" >

    <ImageView
        android:id="@+id/profile_imageblur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/slide_line"
        android:alpha="120"
        android:layout_marginBottom="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_bg"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/slide_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:visibility="invisible" >

        <com.ofcampus.component.CircleImageView
            android:id="@+id/circleView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="2dp"
            android:src="@drawable/ic_profilepic" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/shape_circle_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slide_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_image"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slide_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/slide_name"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/ColorPrimary" >
    </RelativeLayout>

</RelativeLayout>