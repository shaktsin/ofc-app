<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <include
        android:id="@+id/tool_bar"
        layout="@layout/actiontool_bar"
        android:visibility="invisible" >
    </include>

    <LinearLayout
        android:id="@+id/filter_lay_linear_upper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/filter_lay_linear_lower"
        android:layout_below="@+id/tool_bar"
        android:background="@color/joblist_bg_color"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="7"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="2"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/filter_txt_general"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/filter_tab"
                    android:gravity="center"
                    android:text="General"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/filter_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/filter_txt_indus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/filter_tab"
                    android:gravity="center"
                    android:text="Industry"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/filter_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/filter_txt_role"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/filter_tab"
                    android:gravity="center"
                    android:text="Role"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/filter_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/filter_txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/filter_tab"
                    android:gravity="center"
                    android:text="Location"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/filter_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/filter_txt_other"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/filter_tab"
                    android:gravity="center"
                    android:text="Others"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/filter_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="8"
                android:background="@android:color/white" >
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="3"
            android:background="@android:color/white" >

            <ListView
                android:id="@+id/filter_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:visibility="gone" >
            </ListView>

            <include
                android:id="@+id/filter_otheroption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/filter_other_option"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filter_lay_linear_lower"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_color"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/filter_btn_Applyflt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="#5498C7"
            android:gravity="center"
            android:text="Apply Filter"
            android:textColor="@android:color/white"
            android:textSize="@dimen/filter_text_size"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/filter_txt_Clearflt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="#18BC9A"
            android:gravity="center"
            android:text="Clear Filter"
            android:textColor="@android:color/white"
            android:textSize="@dimen/filter_text_size"
            android:textStyle="normal" />
    </LinearLayout>

</RelativeLayout>