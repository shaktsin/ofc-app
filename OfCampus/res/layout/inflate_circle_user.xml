<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ofcampus="http://schemas.android.com/apk/res/com.ofcampus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="1dp" >

    <RelativeLayout
        android:id="@+id/view_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_jobdetails"
        android:background="@android:color/white"
        android:padding="4dp" >

        <ImageView
            android:id="@+id/inflate_comment_img_pic"
            android:layout_width="@dimen/joblitview_picwd"
            android:layout_height="@dimen/joblitview_picwd"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:background="@drawable/joblist_row_rect"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profilepic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/inflate_comment_img_pic" >

            <com.ofcampus.ui.CustomTextView
                android:id="@+id/inflate_comment_txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/Comment_username"
                android:textStyle="bold"
                ofcampus:fontName="HelveticaBold.ttf" />

            <com.ofcampus.ui.CustomTextView
                android:id="@+id/inflate_comment_txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inflate_comment_txt_name"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:maxLines="4"
                android:text=""
                android:textColor="@color/job_contain"
                android:textSize="@dimen/Comment_username"
                ofcampus:fontName="Helvetica.otf" />

            <com.ofcampus.ui.CustomTextView
                android:id="@+id/inflate_member_since"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inflate_comment_txt_email"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:textColor="@color/job_contain"
                android:textSize="@dimen/Comment_Comment"
                ofcampus:fontName="HelveticaBold.ttf" />

            <com.ofcampus.ui.CustomTextView
                android:id="@+id/inflate_comment_txt_yeargrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inflate_member_since"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:maxLines="4"
                android:text=""
                android:textColor="@color/job_contain"
                android:textSize="@dimen/Comment_Comment"
                ofcampus:fontName="Helvetica.otf" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>