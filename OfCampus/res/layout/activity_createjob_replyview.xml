<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ofcampus="http://schemas.android.com/apk/res/com.ofcampus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_transparant"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:background="@color/theme_color"
        android:clickable="false" >

        <RelativeLayout
            android:id="@+id/rel_rplview_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@android:color/white" >

            <com.ofcampus.ui.CustomEditText
                android:id="@+id/activity_create_edt_emailreply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:hint="Email"
                android:padding="8dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sp_sixthen"
                android:textStyle="normal"
                ofcampus:fontName="Helvetica.otf" />

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/activity_create_edt_emailreply"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/black" />

            <EditText
                android:id="@+id/activity_create_edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="8dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sp_sixthen"
                android:textStyle="normal" />

            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/activity_create_edt_phone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/black" />

            <EditText
                android:id="@+id/activity_create_edt_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:hint="SMS No"
                android:inputType="phone"
                android:padding="8dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sp_sixthen"
                android:textStyle="normal" />

            <View
                android:id="@+id/view_3"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/activity_create_edt_whatsapp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="15sp"
                android:layout_below="@+id/activity_create_edt_whatsapp" >
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>